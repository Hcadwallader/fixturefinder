@using FixtureFinder.Models
@model List<Event>
@{
//ViewBag.Title = "FixtureFinder";
}
<div class="row">
    <div class="col-md-12" id="bg">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 panel panel-default panelstyle scrollbar">
        <h3 class="panel-title headingtext">Results</h3>
        <div class="panel-body">
            @foreach (Event e in Model)
            {
                <div>
                    <h1 class="teamnametext">@e.hometeam Vs @e.awayteam, @e.location</h1>
                    <a 
                       class="btn btn-primary resultsbuttons" 
                       href="@Url.Action("Fixturedetails", "FixtureFinder", new { stadium=e.GetStadium().Id, location=Request.QueryString["location"] })" 
                       target="_blank">
                            More information...
                    </a>
                    <h2 class="stadiumtext">@e.date.ToString("dddd d MMMM (yyyy), h:mm tt ")</h2>
                    <h3 class="locationtext">Distance: @e.distanceFriendly, Travel time: @e.durationFriendly</h3>
                    <hr class="dividerwidth"/>
                </div>
            }
            
        </div> 
    </div>
</div>
    </div>
</div>

